# 1. Demonstrate any 2 data pre-processing techniques for a given dataset

# Step 1: Importing the libraries
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler
from sklearn.impute import SimpleImputer
from sklearn.preprocessing import LabelEncoder
from sklearn.compose import ColumnTransformer
from sklearn.preprocessing import OneHotEncoder

# Step 2: Load the dataset
# Ensure 'sheet1.csv' is in the same directory
df = pd.read_csv('sheet1.csv') 
print("Original Dataset")
print(df)

# Step 3: Finding the missing values
missing_data = df.isnull().sum()
print("Missing Data")
print(missing_data)

# Step 4: Handling Missing Data
# Using Mean Imputation for 'Salary' and 'Age' columns
imputer = SimpleImputer(strategy='mean')
df['Salary'] = imputer.fit_transform(df[['Salary']])
df['Age'] = imputer.fit_transform(df[['Age']])

# Step 5: Encoding Categorical Data
# Label Encoding for 'Gender' column
label_encoder = LabelEncoder()
df['Gender'] = label_encoder.fit_transform(df['Gender'])
print(df)

# One-Hot Encoding for 'Department' column
ct = ColumnTransformer(
    transformers=[('one-hot', OneHotEncoder(), ['Department'])],
    remainder='passthrough'
)

df_encoded = ct.fit_transform(df)

# Converting back to DataFrame with specific column names
# Note: The column names below assume 'Department' had 4 unique values (HR, IT, Finance, Marketing)
# and the remaining columns were ID, Name, Age, Gender, Salary.
df_encoded = pd.DataFrame(df_encoded, columns=['HR', 'IT', 'Finance', 'Marketing', 'ID', 'Name', 'Age', 'Gender', 'Salary'])

print(df_encoded)
